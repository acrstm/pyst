<div class="container-init">
      <div class="plus-wrapper">
        <%# <%= link_to group_bought_items_path do %>

      </div>
  <div class="container-form">
    <%= simple_form_for :category, url: new_group_shopping_list_bought_item_path(@group, @shopping_list), method: :get do |f| %>
      <%= f.input :category, legend_tag: false,
                as: :check_boxes,
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper',
                item_wrapper_class: 'category-item',
                input_html: {class: 'category-selector rounded', multiple: true },
              # collection: @product
              collection: @products.map {|product|[product.name, product.id, style:"background-image:url(#{image_path "icons/#{product.name.downcase}.svg"})"]} %>
      <div class="container-end">
        <%= f.submit "Check Basket", class:"container-basket"%>
      </div>
    <% end %>
  </div>
</div>
