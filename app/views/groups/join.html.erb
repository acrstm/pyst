<div class="d-flex align-items-center flex-column">

  <h1>Your group</h1>

    <div class="container tasks_index_bg_card">

      <p>Create a new group</p>
        <%= link_to new_group_path do %>
          <div class="container">
            <i class="fa-solid fa-square-plus fa-2xl" style="color:#DF6C4F" class="align-center" ></i>
          </div>
        <% end %>

      <p>Join a group</p>

    <%= simple_form_for current_user, url: join_group_groups_path, method: :post do |f| %>
      <%= f.input :group_id, collection: @groups, value_method: :id, prompt: 'Pick your group' %>
      <%= f.button :submit, "Join" %>
    <% end %>

    </div>
</div>
